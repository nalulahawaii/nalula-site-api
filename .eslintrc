{
  "extends": [
    "prettier"
  ],
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "ecmaFeatures": {
      "globalReturn": false
    }
  },
  "rules": {
    "semi": [
      2,
      "never"
    ],
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "camelcase": 1,
    "import/prefer-default-export": 0,
    "consistent-return": 0,
    "no-restricted-syntax": 0,
    "no-underscore-dangle": 0,
    "no-unused-vars": [
      2,
      {
        "argsIgnorePattern": "req|res|next"
      }
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "quotes": [
      2,
      "single",
      {
        "allowTemplateLiterals": true,
        "avoidEscape": true
      }
    ],
    "no-use-before-define": 0
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
